-- Tabela de tarefas

CREATE TABLE tarefas(
	
    id SERIAL PRIMARY KEY,
    id_usuario INTEGER REFERENCES usuarios(id),
    descricao_tarefa VARCHAR(100) NOT NULL,                     ---  Deu ERROR, estou usando a tabela LÁ EM BAIXO ---
    nome_setor VARCHAR(50) NOT NULL,
    prioridade varchar(50) not null,
    data_cadastro  date,
    status VARCHAR(20) NOT NULL DEFAULT 'a fazer'(status IN ('a fazer', 'fazendo', 'pronto'))
); 

INSERT INTO carros (modelo, cor, km, status) VALUES ('Fusca', 'azul', 100000, 'disponivel');
INSERT INTO tarefas (descricao_tarefa, nome_setor, prioridade, status) VALUES ('Fusca', 'azul', 100000, 'a fazer');

CREATE TABLE tarefas (
    id SERIAL PRIMARY KEY,
    id_usuario INTEGER REFERENCES usuarios(id),
    descricao_tarefa VARCHAR(100) NOT NULL,
    nome_setor VARCHAR(50) NOT NULL,
    prioridade VARCHAR(50) NOT NULL,
    data_cadastro DATE,
    status VARCHAR(20) NOT NULL DEFAULT 'a fazer',
    CONSTRAINT status_check CHECK (status IN ('a fazer', 'fazendo', 'pronto'))
);

